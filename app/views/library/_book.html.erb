<% user_book = UserBook.where(:book_id => book.id, :reader_id => Current.user.id).at(0) %>


<%= link_to book_path(book), class: "book-card-link" do %>
  <div class="book-card">
      <div class="book-cover">
        <%= book.title.upcase %>
      </div>
      <div class="book-info">
        <div class="book-title"><%= book.title %></div>
        <div class="book-author"><%= book.author %></div>
        <div class="book-rating">
          <% if user_book.rating? %>
            <% user_book.rating.times do %>
              <span class="star">â˜…</span>
            <% end %>
          <% end %>
        </div>
      </div>
  </div>
<% end %>
