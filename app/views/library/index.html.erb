<div class="page-header">
  <h1>My Library</h1>
  <p>Track what you've read and discover your next favorite book</p>
            
  <div class="stats">
    <div class="stat">
      <div class="stat-number" id="readCount"><%= @read_books.size %></div>
      <div class="stat-label">Books Read</div>
    </div>

    <div class="stat">
      <div class="stat-number" id="wantCount"><%= @want_to_read_books.size %></div>
      <div class="stat-label">Want to Read</div>
    </div>

    <div class="stat">
      <div class="stat-number"><%= @readers %></div>
      <div class="stat-label">Readers Like You</div>
    </div>
  </div>
</div>

<!-- Book Search -->
<%= render "shared/search"%>

<!-- Tabs -->
<div class="tabs">
  <button class="tab active" onclick="switchTab('read')">I've Read</button>
  <button class="tab" onclick="switchTab('want')">Want to Read</button>
</div>

<!-- Read Books Grid -->
<div id="readBooks" class="books-grid">
  <% @read_books.each do |b| %>
    <%= render "library/book", book: b %>
  <% end %>
</div>

<!-- Want to Read Books Grid (Hidden by default) -->
<div id="wantBooks" class="books-grid" style="display: none;">
  <% @want_to_read_books.each do |b| %>
    <%= render "library/book", book: b %>
  <% end %>
</div>
