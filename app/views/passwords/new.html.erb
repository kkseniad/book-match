<div class="auth-container">
  <div class="auth-card text-center">
    <h1>Forgot your password?</h1>

    <%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>

    <%= form_with url: passwords_path do |form| %>
      <%= form.email_field :email_address, required: true, autofocus: true, class:"form-control", placeholder: "Enter your email address", value: params[:email_address] %><br>
      <%= form.submit "Email reset instructions", class: "btn btn-warm-primary w-100 mb-3" %>
    <% end %>
  </div>
</div>
